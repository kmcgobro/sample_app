<h1>All users</h1>

<%= will_paginate %>
<ul class="users">
  <% @users.each do |user| %>
    <li>
      <%= avatar_for user%>
      <%= link_to user.name, user %>
      <% if current_user.admin? %>
      | <%= link_to "delete", user, :method => :delete, :confirm => "You sure, brah?", :title => "Delete #{user.name}" %>
      <% end %>
    </li>
  <% end %>
</ul>
<%= will_paginate %>
